        "max-volume": 150,
        "scroll-step": 2
    },
    "custom/pipewire": {
        // based on https://www.reddit.com/r/swaywm/comments/xtxys5/oc_pipewirewireplumber_module_for_waybar/
        "tooltip": false,
        "max-length": 6,
        "signal": 8,
        "restart-interval": 0,
        "exec": "$HOME/.config/waybar/scripts/pipewire.sh"
    },
    "wireplumber": {
        "format": "{node_name}: {volume}% {icon}",
        "format-muted": "{node_name}: [0%]",
        "on-click": "helvum",
        "reverse-scrolling": 1,
