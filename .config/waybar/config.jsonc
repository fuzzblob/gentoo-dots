    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "custom/power",
        "sway/workspaces",
        "sway/scratchpad",
        "custom/media",
        "sway/mode",
    ],
    "modules-center": [
